{% extends "layout.njk" %}
{% block content %}
<main>
    <h1>{{ title }}</h1>
    <form action="/register" method="POST" class="login">
        <input type="text" name="username" placeholder="Username" class="padding">
        <input type="password" name="password" placeholder="Password" class="padding">
        <input type="password" name="passwordConfirmation" placeholder="Confirm Password" class="padding">
        <button type="submit" class="padding">Register</button>
    </form>
</main>

{% endblock %}